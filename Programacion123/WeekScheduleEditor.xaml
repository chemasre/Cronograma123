<Window x:Class="Programacion123.WeekScheduleEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Programacion123"
    mc:Ignorable="d"
    Title="WeekScheduleEditor" Height="388" Width="366" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown" AllowsTransparency="True" Background="{x:Null}">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" Background="#FFC3B7FF" CornerRadius="30" BorderBrush="#FF0370A9" >
        <Canvas>
            <DataGrid x:Name="WeekDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" ColumnWidth="*" SelectionMode="Single" SelectionUnit="Cell" SelectedCellsChanged="WeekDataGrid_SelectedCellsChanged" Height="139" Canvas.Left="27" Canvas.Top="148" Width="300" BorderBrush="{x:Null}" Background="{x:Null}" HorizontalGridLinesBrush="#FF9BD6FB" VerticalGridLinesBrush="#FF9BD6FB" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="TextEditorTitle" Content="Horario" FontSize="24" FontFamily="Segoe Script" FontWeight="Bold" Width="304" HorizontalAlignment="Left" Canvas.Left="23" Canvas.Top="10" VerticalAlignment="Center" Foreground="#7F093AD0"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="300" VerticalAlignment="Top" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="23" Canvas.Top="292" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Width="298" Height="52" HorizontalAlignment="Center" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Top">
                </TextBlock>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="102" TextWrapping="Wrap" Canvas.Top="101" Width="218" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
            <Label Content="Título" Canvas.Left="27" Canvas.Top="97" HorizontalAlignment="Center" VerticalAlignment="Top" Width="75"/>

        </Canvas>
    </Border>
</Window>