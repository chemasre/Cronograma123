<Window x:Class="Programacion123.WeekScheduleEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="WeekScheduleEditor" Height="388" Width="366" Background="#FFA2ECFF" Closing="Window_Closing" Topmost="True" WindowStartupLocation="CenterOwner" WindowStyle="None" ResizeMode="NoResize" MouseDown="Window_MouseDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="301*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="WeekDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="28,93,38,75" ColumnWidth="*" SelectionMode="Single" SelectionUnit="Cell" SelectedCellsChanged="WeekDataGrid_SelectedCellsChanged" Grid.ColumnSpan="2"/>
        <Label Content="Horario" HorizontalAlignment="Left" Margin="28,21,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Aparajita" FontWeight="Bold" Width="336" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
