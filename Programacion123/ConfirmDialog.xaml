<Window x:Class="Programacion123.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="ConfirmDialog" Height="316" Width="505" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" Topmost="True">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundClouds.png"/>
        </Border.Background>
        <Canvas Margin="0,0,0,2">
            <Border BorderThickness="1" Height="69" Width="488" CornerRadius="30,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{DynamicResource TitleBackground}"/>
            <Border x:Name="BorderDescriptionBase" BorderThickness="1" Height="148" Width="468" Canvas.Left="10" Canvas.Top="84" CornerRadius="10,10,10,10" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundSteps.png"/>
                </Border.Background>
            </Border>
            <Border x:Name="BorderToAlignVerticallyTitle" BorderThickness="1" Height="49" Width="415" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="10" Canvas.Left="20">
                <TextBlock x:Name="TextTitle" TextWrapping="Wrap" Text="Entidad" FontFamily="{DynamicResource WindowTitleFont}" FontSize="24" FontWeight="Bold" LineStackingStrategy="BlockLineHeight" LineHeight="24" Width="414" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
            </Border>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonAccept" Content="" Height="48" Width="48" Canvas.Left="10" BorderBrush="{x:Null}" Canvas.Top="246" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtonAccept_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonAccept.png"/>
                </Button.Background>
            </Button>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonCancel" Content="" Height="48" Width="48" Canvas.Left="228" BorderBrush="{x:Null}" Canvas.Top="246" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center" Click="ButtonCancel_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderContent" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="155" Canvas.Top="101" HorizontalAlignment="Left" VerticalAlignment="Center" Width="306" Height="113">
                <TextBlock x:Name="TextContent" TextWrapping="Wrap" Text="TextBlock" Height="92" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black" Margin="5,0,5,0"/>
            </Border>
            <Label x:Name="LabelAccept" Content="Aceptar" FontSize="22" Width="158" Canvas.Left="65" Canvas.Top="250" Foreground="#7F093AD0" FontWeight="Bold" FontFamily="{DynamicResource TitleFont}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label x:Name="LabelCancel" Content="Cancelar" FontSize="22" Width="158" Canvas.Left="291" Canvas.Top="250" Foreground="#7F093AD0" FontWeight="Bold" FontFamily="{DynamicResource TitleFont}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Image x:Name="IconWarning" Height="100" Canvas.Left="34" Canvas.Top="103" Width="100" Source="/Images/IconWarning.png" HorizontalAlignment="Center" VerticalAlignment="Top" Effect="{DynamicResource EffectDropShadow}"/>
            <Image x:Name="IconInfo" Height="100" Canvas.Left="34" Canvas.Top="103" Width="100" Source="/Images/IconInfo.png" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonAcceptSingle" Content="" Height="48" Width="48" Canvas.Left="228" BorderBrush="{x:Null}" Canvas.Top="246" Style="{DynamicResource PushableButton}" Click="ButtonAccept_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonAccept.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="LabelAcceptSingle" Content="Aceptar" FontSize="22" Width="158" Canvas.Left="283" Canvas.Top="250" Foreground="#7F093AD0" FontWeight="Bold" FontFamily="{DynamicResource TitleFont}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

        </Canvas>
    </Border>
</Window>
