<Window x:Class="Programacion123.BlockEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="BlockEditor" Height="562" Width="504" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" Foreground="{x:Null}" Topmost="True" MouseDown="Window_MouseDown">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundClouds.png"/>
        </Border.Background>
        <Canvas>

            <Border BorderThickness="1" Height="86" Width="488" CornerRadius="30,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{DynamicResource TitleBackground}"/>

            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="438" VerticalAlignment="Center" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="118" Canvas.Top="454" HorizontalAlignment="Left" VerticalAlignment="Center" Width="344">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Height="52" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black" Margin="5,0,5,0"/>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="126" Canvas.Top="97" Width="317" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
            <Border BorderThickness="1" Height="306" Width="431" Canvas.Left="29" Canvas.Top="133" CornerRadius="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Background>
                    <ImageBrush ImageSource="/Images/BackgroundSteps.png" Stretch="UniformToFill"/>
                </Border.Background>
            </Border>
            <Label Content="Título" Canvas.Left="29" Canvas.Top="93" HorizontalAlignment="Center" VerticalAlignment="Center" Width="89" Foreground="{DynamicResource FreeLabel}"/>
            <Label Content="Descripción" Canvas.Left="40" Canvas.Top="150" Width="123" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBoxDescription" Canvas.Left="156" TextWrapping="Wrap" Text="TextBox" Canvas.Top="150" Width="288" Height="66" AcceptsReturn="True" HorizontalAlignment="Center" VerticalAlignment="Top" Effect="{DynamicResource EffectDropShadow}"/>
            <Border x:Name="BorderToAlignVerticallyEditorTitle" BorderThickness="1" Height="69" Width="415" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="20">
                <TextBlock x:Name="TextEditorTitle" TextWrapping="Wrap" FontFamily="{DynamicResource WindowTitleFont}" FontSize="24" FontWeight="Bold" LineStackingStrategy="BlockLineHeight" LineHeight="24" Width="414" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Bloque">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground></TextBlock>
            </Border>
            <Label Content="Actividades" Canvas.Left="40" Canvas.Top="264" Width="110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <ListBox x:Name="ListBoxPoints" Height="158" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="156" Canvas.Top="261" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="ButtonPointNew" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="156" Canvas.Top="232" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                </Button.Foreground>
            </Button>
            <Button x:Name="ButtonPointEdit" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="186" Canvas.Top="232" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                </Button.Foreground>
            </Button>
            <Button x:Name="ButtonPointDelete" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="214" Canvas.Top="232" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                </Button.Foreground>
            </Button>
            <Button x:Name="ButtonPointDown" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="244" Canvas.Top="232" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonMoveDown.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                </Button.Foreground>
            </Button>
            <Button x:Name="ButtonPointUp" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="272" Canvas.Top="232" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonMoveUp.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                </Button.Foreground>
            </Button>
            <Image Height="74" Canvas.Left="19" Canvas.Top="448" Width="100" Source="/Images/ValidatorCapy.png" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Border x:Name="Blocker" Padding="5" Background="#7F000000" CornerRadius="30" Canvas.Left="-8" Canvas.Top="-8" Height="562" Width="503" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" />

        </Canvas>
    </Border>
</Window>
