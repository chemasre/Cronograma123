                        <TextBox x:Name="TextName" Text="TextBox" Width="283" Canvas.Left="159" Canvas.Top="29" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ComboType" Width="283" Canvas.Left="159" Canvas.Top="63" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <ComboBoxItem Content="Ciclo Formativo de Grado Superior"/>
                            <ComboBoxItem Content="Ciclo Formativo de Grado Medio"/>
                        </ComboBox>
                        <TextBox x:Name="TextFamilyName" Text="TextBox" Width="283" Canvas.Left="159" Canvas.Top="102" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
                <TabItem Header="Objetivos generales">
