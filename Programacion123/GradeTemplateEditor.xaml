<Window x:Class="Programacion123.GradeTemplateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="GradeTemplateEditor" Height="645" Width="529" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="{x:Null}" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush ImageSource="/Images/BackgroundClouds.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Canvas>
            <Border BorderThickness="1" Height="73" Width="514" CornerRadius="30,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{DynamicResource TitleBackground}"/>

            <Label x:Name="TextEditorTitle" Content="Plantilla oficial del ciclo" FontSize="24" FontFamily="{DynamicResource WindowTitleFont}" FontWeight="Bold" Width="448" HorizontalAlignment="Center" Canvas.Left="13" Canvas.Top="10" VerticalAlignment="Top" Foreground="White" Background="{x:Null}"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="461" VerticalAlignment="Center" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="110" Canvas.Top="544" HorizontalAlignment="Center" VerticalAlignment="Top" Width="381">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Width="366" Height="52" HorizontalAlignment="Left" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black"/>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="159" Canvas.Top="93" Width="322" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
            <Label Content="Título de la plantilla" Canvas.Left="25" Canvas.Top="87" HorizontalAlignment="Center" VerticalAlignment="Top" Width="169"/>
            <TabControl Height="377" Width="466" HorizontalAlignment="Center" Canvas.Top="143" VerticalAlignment="Top" Canvas.Left="26" BorderBrush="#00ACACAC">
                <TabControl.Background>
                    <ImageBrush ImageSource="/Images/BackgroundSteps.png" Stretch="UniformToFill"/>
                </TabControl.Background>
                <TabItem Header="Datos esenciales">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Nombre oficial" Height="28" Canvas.Left="25" Canvas.Top="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Label Content="Tipo de ciclo" Height="28" Canvas.Left="25" Canvas.Top="60" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Familia profesional" Height="28" Canvas.Left="25" Canvas.Top="97" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextName" Text="TextBox" Width="283" Canvas.Left="159" Canvas.Top="29" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ComboType" Width="283" Canvas.Left="159" Canvas.Top="63" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <ComboBoxItem Content="Ciclo Formativo de Grado Superior"/>
                            <ComboBoxItem Content="Ciclo Formativo de Grado Medio"/>
                        </ComboBox>
                        <TextBox x:Name="TextFamilyName" Text="TextBox" Width="283" Canvas.Left="159" Canvas.Top="102" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
                <TabItem Header="Textos comunes">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox x:Name="ListBoxCommonTexts" Height="235" Width="394" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="31" Canvas.Top="45" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonCommonTextsEdit" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="31" Canvas.Top="16" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Objetivos generales">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox x:Name="ListBoxGeneralObjectives" Height="228" Width="388" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="39" Canvas.Top="54" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
                        <Button x:Name="ButtonGeneralObjectiveNew" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="39" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralObjectiveEdit" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="68" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralObjectiveDelete" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="97" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/ButtonDelete.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralObjectiveDown" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="126" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveDown.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralObjectiveUp" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="155" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveUp.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Competencias profesionales, personales y sociales">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox x:Name="ListBoxGeneralCompetences" Height="228" Width="388" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="39" Canvas.Top="54" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonGeneralCompetenceNew" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="39" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralCompetenceEdit" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="68" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralCompetenceDelete" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="97" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/ButtonDelete.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralCompetenceDown" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="126" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveDown.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonGeneralCompetenceUp" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="155" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveUp.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Competencias clave">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <ListBox x:Name="ListBoxKeyCapacities" Height="228" Width="388" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="39" Canvas.Top="54" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Button x:Name="ButtonKeyCapacitiesNew" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="39" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonKeyCapacitiesEdit" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="68" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonEdit.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonKeyCapacitiesDelete" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="97" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/ButtonDelete.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonKeyCapacitiesDown" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="126" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveDown.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonKeyCapacitiesUp" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="155" Canvas.Top="25" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonMoveUp.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>

                    </Canvas>
                </TabItem>
            </TabControl>
            <Image Height="74" Canvas.Left="13" Canvas.Top="538" Width="100" Source="/Images/ValidatorCapy.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Border x:Name="Blocker" Padding="5" Background="#7FFFFFFF" CornerRadius="30" Canvas.Left="-5" Canvas.Top="-5" Height="691" Width="526" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" />
        </Canvas>
    </Border>
</Window>
