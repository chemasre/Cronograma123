<Window x:Class="Programacion123.ActivityEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="ActivityEditor" Height="718" Width="531" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown" Topmost="True" FontFamily="{DynamicResource Font}">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush ImageSource="/Images/BackgroundClouds.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Canvas Margin="0,0,2,2">
            <Border BorderThickness="1" Height="73" Width="514" CornerRadius="30,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Background="{DynamicResource TitleBackground}"/>

            <Label x:Name="TextEditorTitle" Content="Actividad" FontSize="24" FontFamily="{DynamicResource WindowTitleFont}" FontWeight="Bold" Width="448" HorizontalAlignment="Center" Canvas.Left="13" Canvas.Top="10" VerticalAlignment="Top" Foreground="White" Background="{x:Null}"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="461" VerticalAlignment="Center" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="112" Canvas.Top="617" HorizontalAlignment="Left" VerticalAlignment="Center" Width="379">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Height="52" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black" Margin="0,0,5,0"/>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="185" Canvas.Top="93" Width="288" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}" FontFamily="{DynamicResource Font}"/>
            <Label Content="Título de la actividad" Canvas.Left="25" Canvas.Top="87" HorizontalAlignment="Center" VerticalAlignment="Top" Width="169"/>
            <TabControl Height="421" Width="466" HorizontalAlignment="Center" Canvas.Top="166" VerticalAlignment="Top" Canvas.Left="26" BorderBrush="#00ACACAC" Opacity="0.985">
                <TabControl.Background>
                    <ImageBrush ImageSource="/Images/BackgroundSteps.png" Stretch="UniformToFill"/>
                </TabControl.Background>
                <TabItem Header="Datos esenciales">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Metodología" Canvas.Left="14" Canvas.Top="151" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextMetodology" Canvas.Left="146" Canvas.Top="156" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonMetodologyPick" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="314" Canvas.Top="153" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonPick.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Label Content="Descripción" Canvas.Left="15" Canvas.Top="18" Width="123" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextBoxDescription" Canvas.Left="146" TextWrapping="Wrap" Text="TextBox" Canvas.Top="23" Width="288" Height="110" AcceptsReturn="True" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
                <TabItem Header="Temporización">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Duración (h)" Canvas.Left="14" Canvas.Top="59" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Finaliza sesión" Canvas.Left="15" Canvas.Top="138" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CheckboxNoActivitiesBefore"
                            Canvas.Top="104" Canvas.Left="146" Content="" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ComboBox x:Name="ComboDuration" Width="54" Canvas.Left="148" Canvas.Top="63" HorizontalAlignment="Center" VerticalAlignment="Top" Effect="{DynamicResource EffectDropShadow}"/>
                        <ComboBox x:Name="ComboDurationFraction" Width="53" Canvas.Left="207" Canvas.Top="63" HorizontalAlignment="Center" VerticalAlignment="Top" Effect="{DynamicResource EffectDropShadow}"/>
                        <Label Content="Inicio" Canvas.Left="15" Canvas.Top="19" Width="129" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <ComboBox x:Name="ComboStartType" Width="122" Canvas.Left="149" Canvas.Top="21" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}">
                            <ComboBoxItem Content="Lo antes posible"/>
                            <ComboBoxItem Content="Fecha exacta"/>
                            <ComboBoxItem Content="Día de la semana"/>
                        </ComboBox>
                        <Label Content="Inicia sesión" Canvas.Left="15" Canvas.Top="99" Width="129" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <DatePicker x:Name="DateStartDate" Canvas.Left="287" Canvas.Top="21" Effect="{DynamicResource EffectDropShadow}"/>
                        <ComboBox x:Name="ComboStartWeekDay" Width="145" Canvas.Left="287" Canvas.Top="21" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <CheckBox x:Name="CheckboxNoActivitiesAfter"
                            Canvas.Top="142" Canvas.Left="146" Content="" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextScheduledStartDay" Canvas.Left="146" Canvas.Top="179" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Fecha de inicio" Canvas.Left="14" Canvas.Top="176" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextScheduledEndDay" Canvas.Left="146" Canvas.Top="218" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Fecha de fin" Canvas.Left="14" Canvas.Top="215" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextScheduledSessions" Canvas.Left="146" Canvas.Top="260" Width="56" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <Label Content="Sesiones" Canvas.Left="14" Canvas.Top="257" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
                <TabItem Header="Contenidos">
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Puntos de&#xD;&#xA;contenido" Canvas.Left="-216" Canvas.Top="-153" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListBoxContents" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="-82" Canvas.Top="-147" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonContentReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="-82" Canvas.Top="-176" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonContentReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="-53" Canvas.Top="-176" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Recursos didácticos">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Espacios" Canvas.Left="14" Canvas.Top="36" Width="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ListBox x:Name="ListBoxSpaceResources" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="42" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="ButtonSpaceResourceReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="13" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonSpaceResourceReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="13" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Label Content="Materiales" Canvas.Left="14" Canvas.Top="182" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListBoxMaterialResources" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="191" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonMaterialResourceReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="162" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonMaterialResourceReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="162" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Evaluación">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Criterios de&#xD;&#xA;evaluación" Canvas.Left="14" Canvas.Top="153" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListBoxCriterias" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="162" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonCriteriaReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="133" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonCriteriaReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="133" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <TextBox x:Name="TextActivityCode" Canvas.Left="146" Canvas.Top="55" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Código de actividad" Canvas.Left="14" Canvas.Top="52" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Es evaluable" Canvas.Left="14" Canvas.Top="17" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CheckboxIsEvaluable"
                            Canvas.Top="23" Canvas.Left="147" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Tipo de instrumento&#xD;&#xA;evaluativo" Canvas.Left="14" Canvas.Top="90" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextEvaluationInstrument" Canvas.Left="146" Canvas.Top="95" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonEvaluationInstrumentPick" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="314" Canvas.Top="92" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonPick.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Label Content="Pesos en los resultados de aprendizaje" Canvas.Left="12" Canvas.Top="276" Width="247" Height="42" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <DataGrid x:Name="DataGridLearningResultsWeight" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="23" Canvas.Top="306" Height="61" Width="409" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
            </TabControl>
            <Label Content="Bloque vinculado" Canvas.Left="26" Canvas.Top="120" Width="169" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBlock" Canvas.Left="185" Canvas.Top="124" Width="288" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Left" VerticalAlignment="Center" FontFamily="{DynamicResource Font}" IsReadOnly="True"/>
            <Image Height="74" Canvas.Left="12" Canvas.Top="612" Width="100" Source="/Images/ValidatorCapy.png" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Border x:Name="Blocker" Padding="5" Background="#7FFFFFFF" CornerRadius="30" Canvas.Left="-5" Canvas.Top="-5" Height="691" Width="526" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" />
        </Canvas>
    </Border>
</Window>
