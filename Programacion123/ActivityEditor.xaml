<Window x:Class="Programacion123.ActivityEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="ActivityEditor" Height="658" Width="531" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" Background="#FFC3B7FF" CornerRadius="30" BorderBrush="#FF0370A9" >
        <Canvas Margin="0,0,2,2">
            <Border BorderThickness="1" Height="73" Width="514" CornerRadius="30,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#66FF0000"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <Label x:Name="TextEditorTitle" Content="Actividad" FontSize="24" FontFamily="Segoe Script" FontWeight="Bold" Width="448" HorizontalAlignment="Center" Canvas.Left="13" Canvas.Top="10" VerticalAlignment="Top" Foreground="White" Background="{x:Null}"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="461" VerticalAlignment="Center" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="25" Canvas.Top="554" HorizontalAlignment="Center" VerticalAlignment="Top" Width="466">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Width="451" Height="52" HorizontalAlignment="Left" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black"/>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="185" TextWrapping="Wrap" Canvas.Top="93" Width="288" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
            <Label Content="Título de la actividad" Canvas.Left="25" Canvas.Top="87" HorizontalAlignment="Center" VerticalAlignment="Top" Width="169"/>
            <Border x:Name="Blocker" Padding="5" Background="#7FFFFFFF" CornerRadius="30" Canvas.Left="-5" Canvas.Top="-5" Height="691" Width="526" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" />
            <TabControl Height="369" Width="466" HorizontalAlignment="Center" Canvas.Top="166" VerticalAlignment="Top" Canvas.Left="26" Background="#FFFFE9C3" BorderBrush="#00ACACAC">
                <TabItem Header="Datos esenciales">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Metodología" Canvas.Left="14" Canvas.Top="171" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextMetodology" Canvas.Left="146" TextWrapping="Wrap" Canvas.Top="176" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonMetodologyPick" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="314" Canvas.Top="173" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButtonPick.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Label Content="Duración (h)" Canvas.Left="14" Canvas.Top="211" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <TextBox x:Name="TextDuration" Canvas.Left="146" TextWrapping="Wrap" Canvas.Top="216" Width="57" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Descripción" Canvas.Left="15" Canvas.Top="38" Width="123" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="TextBoxDescription" Canvas.Left="146" TextWrapping="Wrap" Text="TextBox" Canvas.Top="43" Width="288" Height="110" AcceptsReturn="True" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
                <TabItem Header="Contenidos">
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Label Content="Puntos de&#xD;&#xA;contenido" Canvas.Left="-216" Canvas.Top="-134" Width="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ListBox x:Name="ListBoxContents" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="-82" Canvas.Top="-128" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonContentReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="-82" Canvas.Top="-157" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonContentReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="-53" Canvas.Top="-157" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Recursos didácticos">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Espacios" Canvas.Left="14" Canvas.Top="36" Width="129" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <ListBox x:Name="ListBoxSpaceResources" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="42" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <Button x:Name="ButtonSpaceResourceReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="13" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonSpaceResourceReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="13" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <Label Content="Materiales" Canvas.Left="14" Canvas.Top="182" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListBoxMaterialResources" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="191" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonMetodologyReferenceAdd_Copiar1" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="162" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonMetodologyReferenceRemove_Copiar1" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="162" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                    </Canvas>
                </TabItem>
                <TabItem Header="Evaluación">
                    <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Label Content="Criterios de&#xD;&#xA;evaluación" Canvas.Left="14" Canvas.Top="141" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <ListBox x:Name="ListBoxCriterias" Height="104" Width="286" d:ItemsSource="{d:SampleData ItemCount=5}" Canvas.Left="148" Canvas.Top="150" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Button x:Name="ButtonCriteriaReferenceAdd" Content="" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="148" Canvas.Top="121" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceAdd.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                            </Button.Foreground>
                        </Button>
                        <Button x:Name="ButtonCriteriaReferenceRemove" Content="*" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="177" Canvas.Top="121" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/ButonReferenceRemove.png"/>
                            </Button.Background>
                            <Button.Foreground>
                                <ImageBrush ImageSource="/Images/ButtonDelete.png"/>
                            </Button.Foreground>
                        </Button>
                        <TextBox x:Name="TextActivityCode" Canvas.Left="146" TextWrapping="Wrap" Canvas.Top="81" Width="163" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Código de actividad" Canvas.Left="14" Canvas.Top="78" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <Label Content="Es evaluable" Canvas.Left="14" Canvas.Top="37" Width="153" Height="24" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                        <CheckBox x:Name="CheckboxIsEvaluable"
                            Canvas.Top="43" Canvas.Left="147" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    </Canvas>
                </TabItem>
            </TabControl>
            <Label Content="Bloque vinculado" Canvas.Left="26" Canvas.Top="120" Width="169" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBlock" Canvas.Left="185" TextWrapping="Wrap" Canvas.Top="124" Width="288" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Border>
</Window>
