                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png" Opacity="1"/>
                </Button.Background>
            </Button>
            <TextBlock x:Name="Titulo" TextWrapping="Wrap" FontFamily="Monotype Corsiva" FontSize="48" FontWeight="Bold" Foreground="#FF0D4C00" d:IsHidden="True" Height="41" Canvas.Left="229" Canvas.Top="45" Width="438"><Run Language="es-es" Text="Programación"/><Run Text="123"/></TextBlock>
            <ComboBox Width="316" HorizontalAlignment="Left" Canvas.Left="234" Canvas.Top="150" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}"/>
