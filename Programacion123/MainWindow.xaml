            <Label Content="Elige unos contenidos oficiales o define unos propios" HorizontalAlignment="Left" Canvas.Left="229" Canvas.Top="104" VerticalAlignment="Top" FontFamily="Myanmar Text"/>
            <Label Content="Elige un conjunto de actividades definido o define uno nuevo" HorizontalAlignment="Left" Canvas.Left="237" Canvas.Top="305" VerticalAlignment="Top"/>
            <Button x:Name="TestWeekScheduleEditor" Content="Week Schedule" Width="105" Click="TestWeekScheduleEditor_Click" HorizontalAlignment="Left" Canvas.Left="49" Canvas.Top="58" VerticalAlignment="Top"/>

        </Canvas>
    </Border>
</Window>
