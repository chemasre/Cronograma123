<Window x:Class="Programacion123.CommonTextEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="CommonTextEditor" Height="552" Width="506" WindowStyle="None" ResizeMode="NoResize" Background="{x:Null}" Foreground="{x:Null}">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" Background="#FFC3B7FF" CornerRadius="30" BorderBrush="#FF0370A9" >
        <Canvas>
            <Label x:Name="TextEditorTitle" Content="Entidad" FontSize="48" FontFamily="Segoe Script" FontWeight="Bold" Width="448" HorizontalAlignment="Left" Canvas.Left="13" Canvas.Top="3" VerticalAlignment="Center" Foreground="#7F093AD0"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" Click="ButtonClose_Click" HorizontalAlignment="Left" Canvas.Left="440" VerticalAlignment="Center" BorderBrush="{x:Null}" Canvas.Top="10" Style="{DynamicResource PushableButton}">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="29" Canvas.Top="454" HorizontalAlignment="Left" VerticalAlignment="Center" Width="433">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Width="312" Height="52" HorizontalAlignment="Left" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black"/>
            </Border>
            <TextBox x:Name="TextTitle" Canvas.Left="110" TextWrapping="Wrap" Canvas.Top="97" Width="351" HorizontalAlignment="Left" VerticalAlignment="Center" Effect="{DynamicResource EffectDropShadow}"/>
            <Label Content="Título" Canvas.Left="29" Canvas.Top="93" HorizontalAlignment="Center" VerticalAlignment="Top" Width="89"/>
            <Label Content="Descripción" Canvas.Left="29" Canvas.Top="132" Width="129" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="TextBoxDescription" Canvas.Left="110" TextWrapping="Wrap" Text="TextBox" Canvas.Top="137" Width="352" Height="289" AcceptsReturn="True"/>

        </Canvas>
    </Border>
</Window>
