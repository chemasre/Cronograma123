<Window x:Class="Programacion123.HTMLGeneratorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="HTMLGeneratorSettings" Height="701" Width="1147" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Topmost="True" WindowStyle="None" Background="{x:Null}">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundClouds.png"/>
        </Border.Background>
        <Canvas HorizontalAlignment="Left" VerticalAlignment="Top">

            <Border BorderThickness="1" Height="101" Width="1128" CornerRadius="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{DynamicResource TitleBackground}"/>

            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonClose" Content="" Height="40" Width="40" HorizontalAlignment="Center" Canvas.Left="1072" VerticalAlignment="Top" BorderBrush="{x:Null}" Canvas.Top="12" Style="{DynamicResource PushableButton}" Click="ButtonClose_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Border BorderThickness="1" Height="388" Width="381" Canvas.Left="29" Canvas.Top="114" CornerRadius="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundSteps.png"/>
                </Border.Background>
            </Border>
            <Border x:Name="BorderToAlignVerticallyTitle" BorderThickness="1" Height="69" Width="1047" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="20">
                <TextBlock x:Name="TextTitle" TextWrapping="Wrap" FontFamily="{DynamicResource WindowTitleFont}" FontSize="24" FontWeight="Bold" LineStackingStrategy="BlockLineHeight" LineHeight="24" Width="1028" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground><Run Text="Generar programación "/><Run Text="en "/><Run Language="es-es" Text="formato "/><Run Text="HTML"/></TextBlock>
            </Border>
            <Border x:Name="Blocker" Padding="5" Background="#7FFFFFFF" CornerRadius="30" Canvas.Left="-5" Canvas.Top="-5" Height="555" Width="500" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden" />
            <TextBox x:Name="TextAdditionalCss" TextWrapping="Wrap" Text="TextBox" Height="154" Canvas.Left="61" Canvas.Top="308" Width="319" HorizontalAlignment="Center" VerticalAlignment="Top" AcceptsTab="True" AcceptsReturn="True"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonAccept" Content="" Height="48" Width="48" Canvas.Left="684" BorderBrush="{x:Null}" Canvas.Top="618" Style="{DynamicResource PushableButton}" Click="ButtonAccept_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonAccept.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="LabelAccept" Content="Generar" FontSize="22" Width="158" Canvas.Left="740" Canvas.Top="622" Foreground="#7F093AD0" FontWeight="Bold" FontFamily="{DynamicResource TitleFont}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Effect="{DynamicResource EffectDropShadow}" x:Name="ButtonCancel" Content="" Height="48" Width="48" Canvas.Left="888" BorderBrush="{x:Null}" Canvas.Top="618" Style="{DynamicResource PushableButton}" Click="ButtonCancel_Click" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonClose.png"/>
                </Button.Background>
            </Button>
            <Label Content="Cancelar" FontSize="22" Width="158" Canvas.Left="950" Canvas.Top="622" Foreground="#7F093AD0" FontWeight="Bold" FontFamily="{DynamicResource TitleFont}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Programación" Canvas.Left="48" Canvas.Top="139" Width="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="TextSubject" Canvas.Left="147" Canvas.Top="144" Width="196" Effect="{DynamicResource EffectDropShadow}" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="ButtonSubjectPick" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="352" Canvas.Top="141" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonPick.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                </Button.Foreground>
            </Button>
            <Label Content="CSS adicional" Canvas.Left="48" Canvas.Top="274" Width="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Border x:Name="BorderValidation" Padding="5" BorderThickness="0" Background="AntiqueWhite" CornerRadius="10" Canvas.Left="118" Canvas.Top="524" Width="292" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock x:Name="TextValidation" TextWrapping="Wrap" Text="TextBlock" Height="52" Canvas.Left="29" Canvas.Top="303" VerticalAlignment="Center" Foreground="Black" Margin="0,0,5,0"/>
            </Border>
            <Image Height="74" Canvas.Left="19" Canvas.Top="518" Width="100" Source="/Images/ValidatorCapy.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Rectangle Height="478" Width="702" Canvas.Left="426" Canvas.Top="114" Fill="#33000000" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <WebBrowser x:Name="WebPreview" Height="438" Canvas.Left="444" Canvas.Top="133" Width="664" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Border
            Background="#33000000" Width="196" Canvas.Top="205" Canvas.Left="147" Height="68" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Border BorderBrush="Black" BorderThickness="1" Height="68" Width="196" Background="#33000000" Canvas.Left="147" Canvas.Top="205" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Image x:Name="ImageLogo" Height="68" Width="196" Canvas.Left="147" Canvas.Top="205" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Content="Logotipo" Canvas.Left="48" Canvas.Top="199" Width="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="ButtonLogoOpen" Width="24" Height="24" BorderBrush="{x:Null}" Canvas.Left="352" Canvas.Top="205" Effect="{DynamicResource EffectDropShadow}" Style="{DynamicResource PushableButton}" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/ButtonFolder.png"/>
                </Button.Background>
                <Button.Foreground>
                    <ImageBrush ImageSource="/Images/ButtonNew.png"/>
                </Button.Foreground>
            </Button>

        </Canvas>
    </Border>
</Window>
