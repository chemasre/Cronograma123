<Window x:Class="Programacion123.LongTaskDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Programacion123"
        mc:Ignorable="d"
        Title="LongTaskDialog" Height="184" Width="470" ResizeMode="NoResize" Topmost="True" WindowStyle="None" Foreground="{x:Null}" Background="{x:Null}" WindowStartupLocation="CenterScreen" AllowsTransparency="True" MouseDown="Window_MouseDown" ShowInTaskbar="False">
    <Border x:Name="BorderWindow" Padding="5" BorderThickness="3,3,3,3" CornerRadius="30" BorderBrush="{DynamicResource WindowBorder}" >
        <Border.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundClouds.png"/>
        </Border.Background>
        <Canvas>
            <Border BorderThickness="1" Height="86" Width="454" CornerRadius="30,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Background="{DynamicResource TitleBackground}"/>
            <Border x:Name="BorderDescriptionBase" BorderThickness="1" Height="68" Width="430" Canvas.Left="12" Canvas.Top="89" CornerRadius="10,10,10,10" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Images/BackgroundSteps.png"/>
                </Border.Background>
            </Border>
            <ProgressBar Height="32" Canvas.Left="28" Canvas.Top="107" Width="398" HorizontalAlignment="Center" VerticalAlignment="Top" Value="50" IsIndeterminate="True" Background="White" Foreground="#FF1C79A9"/>
            <Border x:Name="BorderToAlignVerticallyEditorTitle" BorderThickness="1" Height="69" Width="415" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="10" Canvas.Left="20">
                <TextBlock x:Name="LabelTitle" TextWrapping="Wrap" FontFamily="{DynamicResource WindowTitleFont}" FontSize="24" FontWeight="Bold" LineStackingStrategy="BlockLineHeight" LineHeight="24" Width="414" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="White"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground><Run Language="es-es" Text="Tarea en progreso"/></TextBlock>
            </Border>

        </Canvas>
    </Border>
</Window>
